{
  "mcpServers": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${PROJECT_ROOT}",
        "--port",
        "32123"
      ],
      "description": "セマンティックコード解析（TypeScript 336ファイルインデックス済み）",
      "env": {
        "SERENA_MAX_MEM": "512",
        "SERENA_MAX_WORKERS": "1"
      }
    },
    "context7-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "React/Next.js/TypeScriptドキュメント検索",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=256"
      }
    },
    "chrome-devtools": {
      "disabled": true,
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "description": "ブラウザデバッグ・スクレイピング"
    },
    "cipher": {
      "type": "stdio",
      "command": "cipher",
      "args": [
        "--mode",
        "mcp",
        "--port",
        "3001",
        "--max-mem",
        "256",
        "--embedder",
        "local"
      ],
      "disabled": false,
      "description": "JewelryStock専用メモリエージェント（ポート3001）",
      "env": {
        "CIPHER_AGENT_CONFIG": "${PROJECT_ROOT}/cipher.yml",
        "CIPHER_PORT": "3001",
        "OLLAMA_BASE_URL": "${OLLAMA_BASE_URL}",
        "VECTOR_STORE_TYPE": "${VECTOR_STORE_TYPE}",
        "CIPHER_LOG_LEVEL": "${CIPHER_LOG_LEVEL}"
      }
    },
    "puppeteer": {
      "disabled": true,
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    }
  }
}