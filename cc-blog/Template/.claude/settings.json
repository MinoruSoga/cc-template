{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["docker", "make", "git", "gcloud", "aws"],
    "network": {
      "allowLocalBinding": true
    }
  },
  "env": {
    "USE_DOCKER": "true",
    "MAX_THINKING_TOKENS": "10000",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "permissions": {
    "allow": [
      "ls",
      "grep",
      "find",
      "cat",
      "head",
      "tail",
      "echo",
      "mkdir",
      "touch",
      "rm",
      "make",
      "gh",
      "docker ps",
      "docker logs"
    ],
    "deny": ["env", "printenv", "Read(./.env*)", "Write(./.env*)"],
    "ask": ["git push", "npm publish", "docker run", "docker stop", "sudo"]
  },
  "enableAllProjectMcpServers": true,
  "mcpServers": {
    "cipher": { "command": "npx", "args": ["-y", "@mcp/cipher"] },
    "sqlite": {
      "command": "uvx",
      "args": ["mcp-server-sqlite", "--db-path", "./database.db"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-playwright"]
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format"
          }
        ]
      }
    ]
  },
  "outputStyle": "senior-engineer",
  "preferredShell": "zsh"
}
