{
  "mcpServers": {
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${PROJECT_ROOT}"],
      "description": "ファイルシステム操作（基本）"
    },
    "github": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub連携（Issue、PR、コード検索）",
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${PROJECT_ROOT}",
        "--port",
        "32123"
      ],
      "description": "セマンティックコード解析（シンボル検索・リファクタリング支援）",
      "env": {
        "SERENA_MAX_MEM": "1024",
        "SERENA_MAX_WORKERS": "2"
      }
    },
    "context7-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "ライブラリドキュメント検索",
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=512"
      }
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "E2Eテスト・ブラウザ自動化",
      "env": {}
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"],
      "description": "ブラウザデバッグ・スクレイピング"
    },
    "sqlite": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "${PROJECT_ROOT}/database.db"
      ],
      "description": "SQLiteデータベース操作",
      "env": {}
    },
    "postgresql": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "postgres-mcp",
        "${POSTGRES_CONNECTION_STRING}"
      ],
      "description": "PostgreSQLデータベース操作（読み書き・パフォーマンス分析）",
      "env": {}
    },
    "figma-mcp": {
      "type": "http",
      "url": "http://127.0.0.1:3845/mcp",
      "description": "Figmaデザイン連携"
    }
  }
}
