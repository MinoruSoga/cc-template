{
  "mcpServers": {
    "figma-mcp": {
      "type": "sse",
      "url": "http://127.0.0.1:3845/sse",
      "description": "Figmaデザイン連携 - Figma Desktopアプリと連携してデザイン情報を取得"
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"],
      "description": "ブラウザ自動化 - Chrome DevToolsを使用したブラウザ操作"
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": ["serena"],
      "description": "コード解析 - セマンティックコード解析ツール"
    },
    "cipher": {
      "type": "stdio",
      "command": "cipher",
      "args": ["--mode", "mcp"],
      "disabled": false,
      "description": "メモリエージェント（完全ローカル）- 知識蓄積・セッション管理・過去の会話検索",
      "env": {
        "CIPHER_AGENT_CONFIG": "${PROJECT_ROOT}/cipher.yml",
        "OLLAMA_BASE_URL": "$OLLAMA_BASE_URL",
        "VECTOR_STORE_TYPE": "$VECTOR_STORE_TYPE",
        "CIPHER_LOG_LEVEL": "$CIPHER_LOG_LEVEL"
      }
    },
    "context7-mcp": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Upstash Context7 MCPサーバー"
    }
  }
}
